#include <stdio.h>

int main() {
    int num, sum = 0, i = 1;
    printf("Enter a positive integer: ");
    scanf("%d", &num);
    
    while(i <= num) {
        sum += i;
        i++;
    }
    
    printf("Sum of first %d natural numbers is %d", num, sum);
    
    return 0;
}
output:-
Enter a positive integer: 5
Sum of first 5 natural numbers is 15
